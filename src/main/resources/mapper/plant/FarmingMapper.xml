    INNER JOIN ddwb_plan_year b
    ON a.plan_year_id = b.id
    WHERE b.plan_id = #{plantingId,jdbcType=INTEGER}
    ORDER BY a.plan_year_id DESC,a.id DESC
    LIMIT 1
  </select>


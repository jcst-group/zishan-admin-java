    FROM ddwb_farming a
    INNER JOIN ddwb_plan_year b
    ON a.plan_year_id = b.id
    INNER JOIN ddwb_crop_batch c
    ON b.plan_id = c.plan_id
    WHERE c.id = #{batchId,jdbcType=INTEGER}
  </select>

